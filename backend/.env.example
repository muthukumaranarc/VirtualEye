# ──────────────────────────────────────────────
# VirtualEye Backend — Environment Variables
# Copy this file to .env and fill in the values.
# DO NOT commit the .env file to version control.
# ──────────────────────────────────────────────

# MongoDB Atlas connection string
VIRTUALEYE_MONGODB_URI=

# Public URL of this backend service
VIRTUALEYE_BACKEND_URL=http://localhost:5000

# Public URL of the frontend (used for CORS)
VIRTUALEYE_FRONTEND_URL=http://localhost:5173

# Flask secret key — change in production
VIRTUALEYE_SECRET_KEY=change-me-in-production

# Camera Streaming Configuration
VIRTUALEYE_CAMERA_STREAM_URL=http://localhost:81
VIRTUALEYE_CAMERA_SIMULATOR=true
